@page
@model RazorPizza.Pages.Checkouts.CheckModel
@{
    var imgPath = $"~/images/Pizzas/{@Model.ImgTitle}.png";
}
<h1>Your Order</h1>
<div class="align-content-center">
    <div class="col-3 mx-auto mb-5">
        <img src=@imgPath class="w-100" asp-append-version="true"/>
        <p>Your order for @Model.Name pizza is ready</p>
        <p>Total price is: @Model.PizzaPrice $</p>
        <br />
        <a class="btn btn-primary mt-1 mx-auto" asp-area="" asp-page="Thank">Confirm Order</a>
    </div>
</div>