@page
@model RazorPizza.Pages.PizzaModel
@{
}   
<div class="text-center">
    <div class="mainText">
        <h1 class="display-4 text-capitalize text-black">Pizzeria Selection</h1>
        <h4>Choose one, or try our pizza builder! then Order and Done!</h4>
        <h4>No need details from guys</h4>
        <h4>We know everything then you do!</h4>
        <p class="smallText"><i>Only one pizza per order</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                        <img src="~/images/Pizzas/Create.png" class="w-100"/>
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-middle makeYourOwnText">
                            <h3 style="text-align:left;">Create your own Pizza</h3>
                            <p style="text-align: left;">Make your own Pizza with our pizza maker</p>
                            <a class="btn btn-outline-primary" style="float:left;" asp-area="" asp-page="Forms/Custom">
                                Bring Pizza    
                            </a>
                        </div>
                    </div>
                </div>
            </div>
                @foreach (var item in Model.fakePizzaDb)
                {
                    var pathImg = $"~/images/Pizzas/{item.ImgTitle}.png";
                    <div class="col-4 mb-5">
                        <img src=@pathImg class="w-100" asp-append-version="true"/>
                        <a class="btn btn-primary mt-1" asp-area=""  asp-page="Checkouts/Check"
                            asp-route-Name = "@item.Name"
                            asp-route-PizzaPrice = "@item.FinalPrice"
                            asp-route-ImgTitle = "@item.ImgTitle"
                            asp-route-Favorite = "@item.Favorite"> 
                                Get this Pizza
                        </a>
                    </div> 
                }   
                <br />
        </div>
    </div>
</div>